<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.liquibase.org/xml/ns/dbchangelog">

    <changeSet author="autum" id="04-subscriptions-table">
        <createTable tableName="subscriptions">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="subscribe_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="unsubscribe_at" type="TIMESTAMP"/>
            <column name="state" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="users_subscriber_fk" references="users(id)"/>
            </column>
            <column name="to_user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="subscription_to_user_fk" references="users(id)"/>
            </column>
        </createTable>

        <createIndex tableName="subscriptions" indexName="subscription_user_id_idx">
            <column name="user_id"/>
        </createIndex>

        <createIndex tableName="subscriptions" indexName="subscription_to_user_id_idx">
            <column name="to_user_id"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>